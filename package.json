{
  "name": "mojan_server",
  "version": "1.0.0",
  "description": "麻將遊戲伺服器",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:protocol": "cross-env USE_PROTOCOL_ENGINE=1 node server.js",
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:protocol-engine": "node scripts/protocol_engine_smoke_test.js",
    "admin:dev": "next dev -p 3001",
    "admin:build": "next build",
    "admin:start": "next start -p 3001",
    "dev:all": "concurrently \"npm run start\" \"npm run admin:dev\"",
    "dev:all:protocol": "concurrently \"npm run start:protocol\" \"npm run admin:dev\"",
    "dev:all:protocol:clean": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/kill_ports.ps1 -Ports \"3000,3001\" && npm run dev:all:protocol",
    "start:all": "concurrently \"npm run start\" \"npm run admin:start\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "googleapis": "^166.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "multer": "^1.4.5-lts.1",
    "next": "^15.3.5",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.7.2",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.76",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "prisma": "^6.15.0",
    "tsx": "^4.7.0"
  }
}
